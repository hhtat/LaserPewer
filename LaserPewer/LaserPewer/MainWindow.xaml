<Window x:Class="LaserPewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaserPewer"
        mc:Ignorable="d"
        Title="LaserPewer" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <GroupBox Header="Status">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="X:" FontSize="32" TextAlignment="Right" Grid.Row="0" Grid.Column="0" />
                    <TextBlock Name="xTextBlock" Text="0.000" FontSize="32" TextAlignment="Right" Grid.Row="0" Grid.Column="1" />

                    <TextBlock Text="Y:" FontSize="32" TextAlignment="Right" Grid.Row="1" Grid.Column="0" />
                    <TextBlock Name="yTextBlock" Text="0.000" FontSize="32" TextAlignment="Right" Grid.Row="1" Grid.Column="1" />

                    <TextBlock Text="Status" FontSize="18" TextAlignment="Right" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" />
                    <TextBlock Name="statusTextBlock" Text="Disconnected" FontSize="24" TextAlignment="Center" Grid.Row="2" Grid.Column="1" />

                    <TextBlock Text="Alarm" FontSize="18" TextAlignment="Right" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" />
                    <TextBlock Name="alarmTextBlock" Text="-" FontSize="24" TextAlignment="Center" Grid.Row="3" Grid.Column="1" />

                    <TextBlock Text="Message" FontSize="14" TextAlignment="Right" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0" />
                    <TextBlock Name="messageTextBlock" Text="-" TextWrapping="Wrap" FontSize="14" TextAlignment="Center" Grid.Row="4" Grid.Column="1" />
                </Grid>
            </GroupBox>

            <GroupBox Header="Connection">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ComboBox Name="machineListComboBox" SelectionChanged="machineListComboBox_SelectionChanged" Grid.Column="0" />
                        <Button Name="machineManageButton" Click="machineManageButton_Click" Content="Manage" Grid.Column="1" />
                    </Grid>

                    <Button Name="connectionButton" Click="connectionButton_Click" Content="Connection" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Controls">
                <StackPanel>
                    <Grid Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Name="resetButton" Click="resetButton_Click" Content="RESET" Grid.Column="0" />
                        <Button Name="homeButton" Click="homeButton_Click" Content="HOME" Grid.Column="1" />
                        <Button Name="unlockButton" Click="unlockButton_Click" Content="UNLOCK" Grid.Column="2" />
                    </Grid>

                    <Grid Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Name="goButton" Click="goButton_Click" Content="GO" Grid.Column="0" />
                        <Button Name="holdButton" Click="holdButton_Click" Content="HOLD" Grid.Column="1" />
                    </Grid>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Drawing">
                <Grid Height="50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Name="importButton" Click="importButton_Click" Content="Import" Grid.Column="0" />
                    <Button Content="Clear" Grid.Column="1" />
                </Grid>
            </GroupBox>
        </StackPanel>

        <local:Workbench x:Name="workbench" MouseDoubleClick="workbench_MouseDoubleClick" Background="DarkGray" Grid.Column="1" />
    </Grid>
</Window>
